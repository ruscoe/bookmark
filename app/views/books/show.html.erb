<p style="color: green"><%= notice %></p>

<h1><%= @book.title %></h1>

<section id="navigation">
  <%= link_to "Back to books", books_path %>
</section>

<section id="options">
  <%= link_to "Edit book", edit_book_path(@book) %>
</section>

<%= render @book %>

<div>
  <%= button_to "Destroy this book", @book, method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
</div>
