# Ignore bundler config.
/.bundle

# Ignore log files and tempfiles.
log/*
tmp/*
!/log/.keep
!/tmp/.keep

# Ignore PID files
*.pid
*.pid.lock

# Ignore database yaml and secrets
/config/database.yml
/config/master.key
/config/credentials.yml.enc

# Ignore the default Rails secret token file.
/config/initializers/secret_token.rb

# Ignore public system files
/public/system

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Ignore node modules
node_modules/

# Ignore Yarn files
yarn-error.log

# Ignore Byebug command history
.byebug_history

# Ignore RuboCop config
.rubocop-rails.yml

# Ignore Mac and Linux DS_Store
.DS_Store
*.swp

# Ignore coverage reports
coverage/

# Ignore vendor directory
/vendor/

# Ignore environment variable files
.env

# Ignore postgres socket files
*.s.PGSQL*

# Ignore vscode or editor configs
.vscode/
.idea/

/app/assets/builds/*
!/app/assets/builds/.keep

/node_modules
